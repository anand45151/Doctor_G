<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"

        android:layout_height="100dp"
        android:layout_alignTop="@+id/card2"
        android:layout_alignBottom="@+id/card2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:outlineSpotShadowColor="@color/black"
        android:translationZ="5dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/image_doctor"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="@drawable/d5"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="@color/lightgray"
        app:cardCornerRadius="30dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/text_doctor_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/hblack"
            android:maxWidth="200dp"
            android:text="Extra Cheese Pizza"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_doctor_specialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/hlight"
            android:maxWidth="250dp"
            android:text="Specilist"
            android:textColor="#9A313035"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/price"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/hblack"
            android:text="799"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="25dp">

        </TextView>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="290dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_baseline_star_24" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>